<Page
  x:Class="WpfTemplateStudio.Views.RsaDigitalSigningPage"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:properties="clr-namespace:WpfTemplateStudio.Properties"
  xmlns:viewmodels="clr-namespace:WpfTemplateStudio.ViewModels"
  d:DataContext="{d:DesignInstance Type=viewmodels:RsaDigitalSigningViewModel}"
  d:DesignHeight="450"
  d:DesignWidth="800"
  Style="{DynamicResource MahApps.Styles.Page}"
  mc:Ignorable="d">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="48" />
      <RowDefinition Height="*" />
    </Grid.RowDefinitions>
    <TextBlock
      Margin="{StaticResource MediumLeftMargin}"
      Style="{StaticResource PageTitleStyle}"
      Text="{x:Static properties:Resources.RsaDigitalSigningPageTitle}" />
    <Grid
      Grid.Row="1"
      Margin="{StaticResource MediumLeftRightMargin}"
      Background="{DynamicResource MahApps.Brushes.Gray10}">
      <StackPanel>
        <StackPanel>
          <StackPanel Height="100" Orientation="Horizontal">
            <Button Command="{Binding GenerateKeyCommand}" Content="Generate key" VerticalAlignment="Top" />
            <ScrollViewer>
              <TextBlock
            Width="100"
            Text="{Binding PrivateKey}"
            TextWrapping="Wrap" />
            </ScrollViewer>
            <ScrollViewer>
              <TextBlock
            Width="100"
            Text="{Binding PublicKey}"
            TextWrapping="Wrap" />
            </ScrollViewer>
          </StackPanel>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
          <Button Command="{Binding AddDataToSignCommand}" Content="Add data to sign" />
          <TextBox
            Width="120"
            Text="Data to sign"
            TextWrapping="Wrap" />
        </StackPanel>
        <Button Command="{Binding SignDataCommand}" Content="Sign data" />
        <TextBlock Text="Digital signature" TextWrapping="Wrap" />
        <StackPanel Orientation="Horizontal">
          <Button Command="{Binding AddDataToVerifyCommand}" Content="Add data to verify" />
          <TextBox
            Width="120"
            Text="Data to verify"
            TextWrapping="Wrap" />
        </StackPanel>
        <StackPanel Orientation="Horizontal">
          <Button Command="{Binding VerifyDataCommand}" Content="Verify data" />
          <TextBox
            Width="120"
            Text="Verified same document"
            TextWrapping="Wrap" />
        </StackPanel>
      </StackPanel>
      <!--
        The Mahapps Gray10 color represents where you should place your content.
        Place your content here.
      -->
    </Grid>
  </Grid>
</Page>
